{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    //"eslint:recommended",
    //"plugin:@typescript-eslint/recommended"
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "camelcase": "off",
    "no-empty-function": "off",
    "@typescript-eslint/no-empty-function": [
      "error"
    ],
    "class-methods-use-this": "off",
    "no-shadow": "off",
    "no-useless-constructor": "off",
    "import/prefer-default-export": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "off"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
